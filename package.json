{
  "name": "node-red-contrib-advanced-mopidy",
  "version": "1.2.0",
  "description": "A Node-RED node to communicate with Mopidy",
  "scripts": {
    "postinstall": "./node_modules/.bin/babel --stage 1 --copy-files --out-dir ./mopidy ./lib",
    "test": "./node_modules/.bin/mocha --recursive --grep 'MopidyConnected' --invert --compilers js:babel/register",
    "test-all": "./node_modules/.bin/mocha --recursive --compilers js:babel/register",
    "lint": "./node_modules/.bin/eslint ./lib/* ./test/*",
    "watch": "./node_modules/.bin/babel --stage 1 --copy-files --watch --out-dir ./mopidy ./lib",
    "clean-build": "./node_modules/.bin/rimraf mopidy; ./node_modules/.bin/babel --stage 1 --copy-files --out-dir ./mopidy ./lib",
    "precommit": "npm run test-all && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy.git"
  },
  "keywords": [
    "node-red",
    "node-red-contrib",
    "contrib",
    "ping"
  ],
  "node-red": {
    "nodes": {
      "mopidy-out": "mopidy/mopidy-out.js",
      "mopidy-config": "mopidy/mopidy-config.js"
    }
  },
  "author": {
    "name": "Emil Oberg"
  },
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy/issues"
  },
  "homepage": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy",
  "dependencies": {
    "babel": "^5.8.23",
    "eyes": "^0.1.8",
    "mopidy": "^0.5.0",
    "promise": "^7.0.4",
    "rimraf": "^2.4.3",
    "validator": "^4.0.6",
    "winston": "^1.0.2"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chai-things": "^0.2.0",
    "eslint": "^1.5.1",
    "eslint-plugin-html": "^1.0.4",
    "express": "^4.13.3",
    "husky": "^0.10.1",
    "mocha": "^2.3.3",
    "node-red": "^0.11.2",
    "superagent": "^1.4.0"
  }
}
